<!--pages/individual/my_program.wxml-->
<view class="bodyView">
  <view class="info">
    <view class="portrait">
      <image src="{{src}}"></image>
    </view>
    <view class="account">
      <view id="username_vu">
        <text id="username">{{nickname}} : {{username}}</text>
      </view>
      <view id="bt_vu">
        <button id="setting" size="mini" bindtap="show" plain="true"><image mode="center" src="../../images/setting.png"></image></button>
        <!-- <button id="square_bt" size="mini" bindtap="goSquare">{{square}}</button>
        <button id="out_bt"size="mini" bindtap="signOut">{{signOut}}</button> -->
      </view>

    </view>
  </view>
  <view class="pj_list">
    <text class="pj_txt">{{ongoing}}</text>
  </view>
  <view  wx:for="{{ongoingList}}" wx:for-index='key' >
    <view  class="list">
      <view class="txt">
        <text class="pjName">{{item.projectName}}</text>
        <text class="time">加入项目时间：{{item.joinTime}} </text>
        <text class="time">项目发布时间：{{item.releaseTime}}</text>
      </view>
      <button size="mini" class="agreeBt" type="primary" id="{{key}}" bindtap="visit_details">{{changeAgree}}</button>
    </view>
    <view class="home-header-line"></view>
  </view>
  <view class="pj_list">
    <text class="pj_txt">{{finished}}</text>
  </view>
  <view wx:for="{{finishedList}}"  wx:for-index='key'>
    <view  class="list" id="{{key}}" bindtap="visit_details">
      <view class="txt">
        <text class="pjName">{{item.projectName}}</text>
        <text class="time">加入项目时间：{{item.joinTime}} </text>
        <text class="time">项目发布时间：{{item.releaseTime}}</text>
      </view>
      <button size="mini" class="agreeBt" type="primary" id="{{key}}" bindtap="visit_details">{{seeAgree}}</button>
    </view>
    <view class="home-header-line"></view>
  </view>
  <text class="pj_txt">无更多问卷显示</text>
</view>


<view class="bottom">
  

</view>


<!-- 以下是侧边栏 -->
<view class="cehuaDa" wx:if="{{isShowSideslip}}">
  <view class="sideslipMenuItemlist">
    <block wx:for="{{sideslipMenuArr}}">
      <view class="sideslipMenuItem" id="{{index}}" catchtap="itemClick">
        {{item}}
      </view>
    </block>
  </view>
  <view class="sideslipMenu" catchtap="offSideslipMen">
  </view>
</view>

