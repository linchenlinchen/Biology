/* pages/individual/edit.wxss */
@import "../../iconfont/iconfont.wxss";


.eidt-detail-images-container .btn-container {
    margin-top: 20rpx;
}

.eidt-detail-images-container .btn-container .btn-view {
    padding: 0rpx 32rpx 32rpx 32rpx;
}

.eidt-detail-images-container .btn-container .btn-view button {
    border-radius: 0rpx;
}

.wrapper {
    padding: 5px;
}

.iconfont {
    display: inline-block;
    padding: 8px 8px;
    width: 24px;
    height: 24px;
    cursor: pointer;
    font-size: 20px;
}

.toolbar {
    box-sizing: border-box;
    border-bottom: 0;
    font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}

.ql-container {
    box-sizing: border-box;
    padding: 12px 15px;
    width: 100%;
    min-height: 50vh;
    height: 100%;
    background: #fff;
    margin-top: 20px;
    font-size: 16px;
    line-height: 1.5;
    border: 1px solid #eee;
}

.ql-active {
    color: #06c;
}

.title{
  font-weight: bold;
  font-size: 20px;
  margin: 10rpx;
}
.content{
  border-color: rgb(192, 192, 190);
  border-style: solid;
  display: flex;
  flex-flow: row;
  border-width: 0px 0px 4px 0px;
  margin: -2px -5px 0px -5px;
  padding: 10px 10px 10px 10px;
  
}

.input{
  width: 70%;
  margin: 5px 5px 5px 5px;
  

}
.name_input{
  border-color: rgb(192, 192, 190);
  border-style: solid;  
  border-width: 1px;
  font-size: 10px;
  width: 200px;

  height: 12px;
}
.content_input{
  border-color: rgb(192, 192, 190);
  border-style: solid;  
  border-width: 1px;
  height: 100px;
  font-size: 10px;
  width: 200px;
}

.circle{
  border-radius: 50%;
  max-width: 140rpx;
  height: 140rpx;
  background-color: #ffc300;
  font-size:x-small;
  color: black;
  margin: 10rpx 10rpx 10rpx 10rpx;
  float:right;  
  text-align: center;
  padding: 20rpx 20rpx 20rpx 20rpx;
  line-height: 50rpx;
}

.delete{
  border-radius: 10rpx;
  background-color: #00baad;
  max-width: 200rpx;
  height: 60rpx;
  float: right;
  font-size: smaller;
  color: white;
  line-height: 60rpx;
}
.btn{
  padding: 0;
  border-radius: 5px;
  background-color: rgb(139, 170, 236);
  font-size: medium;
  color: white;
  margin: 10px 10px 10px 10px;
}
.img{
  padding: 5px;
  margin: 3px;
}
